{
  "name": "curriculum-vitae",
  "version": "1.4.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.2",
    "@sineverba/years-interval": "^1.4.0",
    "bootstrap": "^5.2.3",
    "highcharts": "^10.3.3",
    "highcharts-react-official": "^3.1.0",
    "node-sass": "^8.0.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.7.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-scripts": "5.0.1",
    "web-vitals": "^3.1.1"
  },
  "scripts": {
    "msw": "REACT_APP_MSW=true react-scripts start",
    "start": "react-scripts start",
    "build": "DISABLE_ESLINT_PLUGIN='true' REACT_APP_VERSION=$npm_package_version react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "coverage": "CI=true ENV=test react-scripts test --coverage",
    "eslint": "npx eslint .",
    "fixeslint": "npx eslint . --fix",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "coveralls": "^3.1.1",
    "eslint": "^8.33.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "msw": "^1.0.0",
    "npm-check-updates": "^16.6.3"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.js",
      "!**/__mocks__/**",
      "!**/__test-utils__/**"
    ],
    "collectCoverageFrom": [
      "!<rootDir>/src/reportWebVitals.js",
      "!<rootDir>/src/assets/*",
      "!<rootDir>/src/__tests__/__snapshots__/*.snap"
    ]
  },
  "overrides": {
    "autoprefixer": "10.4.5"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
